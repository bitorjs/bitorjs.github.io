{
  "name": "bitorjs.github.io",
  "version": "1.0.5",
  "description": "> BitorJS 统一了 Vue 和 Node 开发书写规则, 让前后端开发习惯无缝切换",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "webpack-dev-server --config ./build/webpack.dev.js --watch --color --progress",
    "dev": "webpack --config ./build/webpack.dev.js --watch --progress --color",
    "build": "webpack --config ./build/webpack.prod.js --progress --color",
    "build-docker": "docker build -t docker-vue . && docker run -p 8089:8089 -d docker-vue",
    "install_cert": "brew install mkcert && npm run cert",
    "cert": "mkcert localhost 127.0.0.1 192.168.8.102 0.0.0.0 ::1 && mkcert -install",
    "push": "git add . && git commit -m 'update' && npm version patch && git push"
  },
  "dependencies": {
    "bitorjs": "0.0.6",
    "highlight.js": "^9.15.6",
    "normalize.css": "^8.0.1",
    "object-assign": "^4.1.1",
    "qs": "^6.7.0",
    "vue": "^2.6.10",
    "vuex": "^3.1.0",
    "vuex-persist": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-export-namespace-from": "^7.2.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-block-scoping": "^7.4.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.0",
    "@babel/plugin-transform-parameters": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-import": "^1.11.0",
    "clean-webpack-plugin": "^2.0.1",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "highlightjs-line-numbers.js": "^2.7.0",
    "html-webpack-plugin": "^4.0.0-beta.5",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "mockjs": "^1.0.1-beta3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "terser-webpack-plugin": "^1.2.3",
    "url-loader": "^1.1.2",
    "vconsole-webpack-plugin": "^1.4.2",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitorjs/bitorjs.github.io.git"
